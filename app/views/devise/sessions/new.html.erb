<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="page-header">
      <h2 class="text-center">Log in</h2>
      <br>
    </div> <!-- /.page-header -->

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group">
        <%= f.label :email, class: 'sr-only' %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Enter Email Address' %>
      </div>

      <div class="field form-group">
        <%= f.label :password, class: 'sr-only' %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Enter Password' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field form-group pull-left">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions pull-right">
        <%= f.submit "Log in", class: 'btn btn-success' %>
      </div>
    <% end %>
    <br><br><br>
    <%= render "devise/shared/links" %>
  </div>
</div>
