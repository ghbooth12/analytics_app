<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="page-header">
      <h2 class="text-center">Sign Up</h2>
      <br>
    </div> <!-- /.page-header -->

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field form-group">
        <%= f.label :username, class: 'sr-only' %>
        <%= f.text_field :username, autofocus: true, class: 'form-control', placeholder: 'Enter username.' %>
      </div>

      <div class="field form-group">
        <%= f.label :email, class: 'sr-only' %><br />
        <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email address.' %>
      </div>

      <div class="field form-group">
        <%= f.label :password, class: 'sr-only' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Enter password.' %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation, class: 'sr-only' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Enter password again.' %>
      </div>

      <div class="actions pull-right">
        <%= f.submit "Sign up", class: 'btn btn-success' %>
      </div>
    <% end %>
    <br><br><br>
    <%= render "devise/shared/links" %>
  </div>
</div>
